<p style="color: green"><%= notice %></p>
<h1>Posts</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Premium</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <div id="posts">
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td><%= post.premium %></td>
          <td><%= link_to "Show this post", post %></td>
          <td><%= link_to "Edit", edit_post_path(post) %></td>
          <td><%= link_to "Delete", post, method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
      <%end%>
    </div>
  </tbody>
</div>
</table>
<%= link_to "New post", new_post_path %>
